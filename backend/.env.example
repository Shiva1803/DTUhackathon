# ===========================================
# Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3001

# ===========================================
# MongoDB Configuration
# ===========================================
MONGO_URI=mongodb://localhost:27017/your_database_name

# ===========================================
# Auth0 Configuration
# ===========================================
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://your-api-identifier
AUTH0_CLIENT_ID=your_client_id

# ===========================================
# External API Keys
# ===========================================
# OnDemand Chat API
OND_CHAT_KEY=your_ond_chat_api_key
OND_CHAT_URL=https://api.on-demand.io/chat/v1

# OnDemand Media API (Audio Transcription)
OND_MEDIA_KEY=your_ond_media_api_key
OND_MEDIA_URL=https://api.on-demand.io/media/v1

# Google Gemini
GEMINI_KEY=your_gemini_api_key

# Eleven Labs (Text-to-Speech)
ELEVEN_KEY=your_elevenlabs_api_key

# ===========================================
# Cloudinary (Media Storage)
# ===========================================
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
