# ===========================================
# Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# All variables marked [REQUIRED] must be set for production

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=3001

# ===========================================
# MongoDB Configuration [REQUIRED]
# ===========================================
MONGO_URI=mongodb://localhost:27017/your_database_name

# ===========================================
# Auth0 Configuration [REQUIRED]
# ===========================================
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://your-api-identifier
AUTH0_CLIENT_ID=your_client_id

# ===========================================
# Cloudinary (Audio Storage) [REQUIRED for audio upload]
# ===========================================
# Format: cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# ===========================================
# OnDemand Chat API [REQUIRED for chat]
# ===========================================
OND_CHAT_KEY=your_ond_chat_api_key
OND_CHAT_URL=https://api.on-demand.io/chat/v1

# ===========================================
# OnDemand Media API [REQUIRED for transcription]
# ===========================================
OND_MEDIA_KEY=your_ond_media_api_key
OND_MEDIA_URL=https://api.on-demand.io/media/v1

# ===========================================
# Google Gemini API [Optional - for AI categorization]
# ===========================================
GEMINI_KEY=your_gemini_api_key

# ===========================================
# Eleven Labs API [Optional - for TTS]
# ===========================================
ELEVEN_KEY=your_elevenlabs_api_key

# ===========================================
# CORS Configuration [Optional]
# ===========================================
CORS_ORIGIN=*
